<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="net.philipp_koch.dynamicmediabtrouter">
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".Global">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:label="@string/app_name" android:name="IntentReceiver">
            <intent-filter>
                <action android:name="net.philipp_koch.dynamicmediabtrouter.ON"/>
                <action android:name="net.philipp_koch.dynamicmediabtrouter.OFF"/>
            </intent-filter>
        </receiver>
        <service android:label="RedirectorService" android:name="RedirectorService"/>
    </application>
</manifest>
